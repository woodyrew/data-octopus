
<meta name="description" content="{{description}}" />

{{!-- Meta templates: https://moz.com/blog/meta-data-templates-123 --}}
{{!-- Twitter Card data --}}
<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:site" content="@{{site.twitter_user}}">
<meta name="twitter:title" content="{{name}} – {{subtitle}}">
<meta name="twitter:description" content="{{description}}">
<meta name="twitter:creator" content="@{{site.twitter_user}}">
{{!-- Twitter Summary card images must be at least 120x120px --}}
<meta name="twitter:image" content="{{#if featured_image}}{{cloudinary featured_image 'fl_progressive'}}{{else}}{{site.default_image}}{{/if}}">

{{!-- Open Graph data --}}
<meta property="og:title" content="{{name}} – {{subtitle}}" />
<meta property="og:type" content="article" />
<meta property="og:url" content="{{site.url}}/{{page.url}}" />
<meta property="og:image" content="{{#if featured_image}}{{cloudinary featured_image 'fl_progressive'}}{{else}}{{site.default_image}}{{/if}}" />
<meta property="og:description" content="{{description}}" /> 
<meta property="og:site_name" content="{{site.name}}" />